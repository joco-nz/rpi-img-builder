# architecture
ARCH="arm64"
ARCH_EXT="arm64"
DEBARCH=""
CROSS_COMPILE="aarch64-linux-gnu-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-aarch64-static"

# misc
FAMILY="broadcom"
FAMILY_EXT=""

# default config
LINUX_DEFCONFIG="bcmrpi3_defconfig"

# partitions
EFI="true"
OFFSET="8192"
P_VALUE="p2"

# output
BOARD="bcm2710"
BOARD_EXT="rpi-3"
OUTPUT="output/${BOARD}"
IMG_EXP="${BOARD_EXT}-*.img*"

# cmdline
CONSOLE="console=serial0,115200 console=tty1"
EXTRA="logo.nologo net.ifnames=0 firmware_class.path=/lib/firmware/updates/brcm"

# motd
MOTD="Raspberry Pi"

# image sizes
EXT4="3000MB"
BTRFS="2650MB"
XFS="2650MB"

# packaging
KERNEL_IMG="kernel8.img"
SERIES="${BOARD_EXT}-bcm2710"
LINUX_IMAGE="linux-image-${SERIES}"
LINUX_HEADERS="linux-headers-${SERIES}"
COMPRESSION="xz"
